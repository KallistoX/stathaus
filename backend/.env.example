# Server Configuration
PORT=3000
NODE_ENV=production

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=2
# REDIS_TLS=true  # Uncomment for TLS connections

# OAuth2/OIDC Configuration
# The issuer URL will be used for auto-discovery of OAuth endpoints
OAUTH_ISSUER=https://sso.your-domain.com
OAUTH_CLIENT_ID=stathaus-sso
OAUTH_CLIENT_SECRET=your-client-secret
OAUTH_REDIRECT_URI=https://stathaus.your-domain.com/auth/callback
OAUTH_SCOPES=openid profile email

# Optional: Override discovery URL if needed
# OAUTH_DISCOVERY_URL=https://sso.your-domain.com/.well-known/openid-configuration

# Security
# Comma-separated list of allowed origins for CORS
CORS_ORIGIN=https://stathaus.your-domain.com

# Optional: Rate limiting (defaults shown)
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
# RATE_LIMIT_MAX=100  # requests per window

# Application
APP_VERSION=1.0.0
